                        <labels>
                    </labels>
                <created>Fri, 3 Sep 2010 12:21:50 +0100</created>
                <updated>Sun, 27 Nov 2011 12:29:28 +0000</updated>
                    <resolved>Thu, 9 Sep 2010 13:54:52 +0100</resolved>
                            <version>4.0-ALPHA</version>
